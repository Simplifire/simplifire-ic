type TimestampMillis = nat64;

type Document =
    record {
        id: nat32;
        added: TimestampMillis;
        name: text;
        content: text;
        done: bool;
    };

service: {
    add: (text) -> (nat32);
    get: (opt bool) -> (vec Document) query;
    mark_done: (id: nat32) -> (bool);


    add_doc: (text, text) -> ();
    get_docs: (opt bool) -> (vec Document) query;

    whoami: () -> (text);
}


